{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(gh api *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(gh run view *)",
      "Bash(git add *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git fetch *)",
      "Bash(git log *)",
      "Bash(git pull *)",
      "Bash(git rm *)",
      "Bash(git stash *)",
      "Bash(git status *)",
      "Bash(docker build *)",
      "Bash(npm info *)",
      "Bash(npm run *)",
      "Bash(npx eslint *)",
      "Bash(npx tsc *)",
      "Bash(nx *)",
      "Bash(pnpm *)",
      "Bash(task *)",
      "Bash(wt *)",
      "Skill(superpowers:brainstorming)",
      "Skill(superpowers:writing-plans)",
      "mcp__pencil"
    ],
    "deny": [
      "Read(./**/*credentials*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.zshrc-modules/.zshrc.sec)",
      "Read(~/.zshrc-sec)"
    ],
    "ask": ["Bash(git push *)", "Bash(curl *)"],
    "defaultMode": "default"
  },
  "hooks": {},
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "code-review@claude-plugins-official": false,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": false,
    "context7@claude-plugins-official": false,
    "dev-browser@dev-browser-marketplace": true,
    "explanatory-output-style@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": false,
    "frontend-design@claude-plugins-official": true,
    "linear@claude-plugins-official": false,
    "nest-linear@nest-genomics-skills": false,
    "nest-pr@nest-genomics-skills": false,
    "nest-retool-json-schema-forms@nest-genomics-skills": false,
    "playwright-skill@playwright-skill": true,
    "playwright@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": false,
    "ralph-loop@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": true,
    "superpowers@claude-plugins-official": false,
    "superpowers@superpowers-marketplace": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "outputStyle": "Explanatory",
  "spinnerTipsEnabled": false,
  "spinnerVerbs": {
    "mode": "append",
    "verbs": ["Nesting", "sahh good", "ralphing"]
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": false,
  "effortLevel": "medium",
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "network": {
      "allowLocalBinding": true
    },
    "excludedCommands": ["git"]
  }
}
