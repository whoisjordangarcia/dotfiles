echo "  ls                  Enhanced ls (eza)"
echo "  cat                 View with syntax highlighting (bat)"
echo "  preview             Interactive file preview (fzf + bat)"
echo "  compress <dir>      Create tar.gz archive"
echo "  decompress <file>   Extract tar.gz archive"
