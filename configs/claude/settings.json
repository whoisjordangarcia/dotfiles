{
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(gh pr create:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(npm info:*)",
      "Bash(npm run:*)",
      "Bash(npm run:*)",
      "Bash(nx:*)",
      "Bash(pnpm:*)",
      "Bash(task:*)"
    ],
    "deny": [
      "Read(./**/*credentials*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.zshrc-modules/.zshrc.sec)",
      "Read(~/.zshrc-sec)"
    ],
    "ask": ["Bash(git push:*)", "Bash(curl:*)"]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "linear@claude-plugins-official": false,
    "dev-browser@dev-browser-marketplace": true,
    "frontend-design@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "claude-mem@thedotmack": true
  },
  "outputStyle": "Explanatory",
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest"
}
