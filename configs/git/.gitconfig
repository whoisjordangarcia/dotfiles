	name = Jordan Garcia
	email = arickho@gmail.com

[core]
  editor = nvim
  autocrlf = input
  safecrlf = true
  filemode = false 
	pager = bat
  excludesfile = ~/.gitignore_global

[color]
  ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[push]
  default = current 
  

[pull]
  rebase = false 

[fetch]
  prune = true

[includeIf "gitdir:~/dev/work/"]
  path = ~/dev/work/.gitconfig

[alias]
	wt-auto = "\\!f() { branch=$1; [ -z \"$branch\" ] && { echo \"Usage: git wt-auto <branch-name>\"; exit 1; }; git fetch origin; git worktree add ../$branch origin/$branch 2>/dev/null || git worktree add ../$branch -b $branch origin/develop; echo \"Worktree created: ../$branch\"; }; f"
	wt-list = worktree list
	wt-remove = worktree remove
	wt-prune = worktree prune
