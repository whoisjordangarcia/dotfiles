#!/bin/zsh

terminal() {
  ghostty --class=Omarchy -e "$@"
}


present_terminal() {
  otobun-floating-terminal $1
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-a" "$index")
    fi
  fi

  echo -e "$options" | walker --dmenu -p "$prompt…" "${args[@]}"
}

show_install_menu() {
  case $(menu "Install" "󰣇  Package\n󰣇  AUR\n  Web App\n  TUI\n  Service\n  Style\n󰵮  Development\n  Editor\n  Terminal\n󱚤  AI\n  Gaming") in
  *Package*) present_terminal otobun-pkg-install ;;
  *AUR*) terminal otobun-pkg-aur-install ;;
  *Web*) present_terminal omarchy-webapp-install ;;
  *TUI*) present_terminal omarchy-tui-install ;;
  *Service*) show_install_service_menu ;;
  *Style*) show_install_style_menu ;;
  *Development*) show_install_development_menu ;;
  *Editor*) show_install_editor_menu ;;
  *Terminal*) show_install_terminal_menu ;;
  *AI*) show_install_ai_menu ;;
  *Gaming*) show_install_gaming_menu ;;
  *) show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰉉  Install\n󰭌  Remove\n  About\n  System")"
}

go_to_menu() {
  case "${(L)1}" in
  *apps*) walker -p "Launch…" ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *about*) otobun-launch-about ;;
  *system*) show_system_menu ;;
  esac
}


show_main_menu
