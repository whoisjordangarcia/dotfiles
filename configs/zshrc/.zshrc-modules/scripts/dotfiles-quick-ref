echo "  gc <branch>         git checkout"
echo "  grm                 git pull --rebase origin main"
echo "  gpf                 git push --force-with-lease"
echo ""
echo "🌿 GIT WORKTREES"
echo "  wt-auto [br] [base] Create/checkout worktree"
echo "  wt-list             List worktrees"
echo "  wt-remove <name>    Remove worktree"
echo "  wt-prune            Clean stale references"
echo ""
echo "🔐 ENCODING/DECODING"
echo "  decode_url <url>    Decode URL string"
echo "  encode64 [str]      Base64 encode"
echo "  decode64 [str]      Base64 decode"
