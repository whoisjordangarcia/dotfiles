#!/bin/bash

ai_assemble() {
	local current_dir=$(pwd)

	if [ ! -e "AGENTS.md" ]; then
		if [ -f "CLAUDE.md" ]; then
			ln -sf "CLAUDE.md" "AGENTS.md"
			echo "âœ“ Created AGENTS.md symlink to CLAUDE.md"
		else
			echo "âŒ CLAUDE.md not found in current directory"
			return 1
		fi
	else
		if [ -L "AGENTS.md" ]; then
			echo "âœ“ AGENTS.md symlink already exists"
		else
			echo "âœ“ AGENTS.md already exists (not a symlink)"
		fi
	fi

	echo "ğŸ¯ AI agent instruction symlinks setup complete!"

	echo
	printf "ğŸ”— Linking agents"
	for i in {1..3}; do
		printf "."
		sleep 0.3
	done
	echo

	local sparkles=("âœ¨" "â­" "ğŸŒŸ" "ğŸ’«" "âš¡")
	for sparkle in "${sparkles[@]}"; do
		printf "\r$sparkle AI agents assembled! $sparkle"
		sleep 0.2
	done
	echo
}

ai_assemble
