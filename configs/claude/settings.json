{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(gh pr create *)",
      "Bash(gh pr list *)",
      "Bash(gh pr view *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git push *)",
      "Bash(git status *)",
      "Bash(npm info *)",
      "Bash(npm run *)",
      "Bash(nx *)",
      "Bash(pnpm *)",
      "Bash(task *)",
      "mcp__pencil"
    ],
    "deny": [
      "Read(./**/*credentials*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Read(~/.zshrc-modules/.zshrc.sec)",
      "Read(~/.zshrc-sec)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(curl *)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/permission-notification.sh",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "linear@claude-plugins-official": false,
    "dev-browser@dev-browser-marketplace": true,
    "frontend-design@claude-plugins-official": true,
    "code-review@claude-plugins-official": false,
    "code-simplifier@claude-plugins-official": true,
    "claude-mem@thedotmack": false,
    "ralph-loop@claude-plugins-official": false,
    "superpowers@claude-plugins-official": false,
    "feature-dev@claude-plugins-official": false,
    "context7@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": false,
    "playwright@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": false,
    "explanatory-output-style@claude-plugins-official": true,
    "nest-retool-json-schema-forms@nest-genomics-skills": true,
    "nest-pr@nest-genomics-skills": true,
    "playwright-skill@playwright-skill": true,
    "nest-linear@nest-genomics-skills": true,
    "nest-slite@nest-genomics-skills": true
  },
  "outputStyle": "Explanatory",
  "spinnerTipsEnabled": false,
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "Nesting",
      "sahh good",
      "ralphing"
    ]
  },
  "alwaysThinkingEnabled": true,
  "companyAnnouncements": [
    "Nest Genomics"
  ],
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": true,
  "effortLevel": "medium"
}
